<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>unquietcode.tools.flapi</groupId>
	<artifactId>build-project</artifactId>
	<version>0.4-SNAPSHOT</version>
	<packaging>pom</packaging>

	<properties>
		<flapi.generated.sources>${project.build.directory}/generated-sources/flapi</flapi.generated.sources>
		<flapi.descriptor.class>change.me</flapi.descriptor.class>
		<flapi.descriptor.method>changeMe</flapi.descriptor.method>
	</properties>

	<build>

		<!-- Flapi plugin -->
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>unquietcode.tools.flapi</groupId>
					<artifactId>flapi-build-plugin</artifactId>
					<version>${project.version}</version>
					<executions>
						<execution>
							<goals>
								<goal>generate</goal>
							</goals>
							<configuration>
								<descriptorClass>${flapi.descriptor.class}</descriptorClass>
								<descriptorMethod>${flapi.descriptor.method}</descriptorMethod>
							</configuration>
						</execution>
					</executions>
				</plugin>
			</plugins>
		</pluginManagement>

		<!-- create a source jar at the end -->
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>2.1.2</version>
				<executions>
					<execution>
						<goals>
							<goal>jar</goal>
						</goals>
						<phase>package</phase>
					</execution>
				</executions>
			</plugin>

			<!-- create a javadoc jar at the end -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.8.1</version>
				<executions>
					<execution>
						<goals>
							<goal>jar</goal>
						</goals>
						<phase>package</phase>
					</execution>
				</executions>
			</plugin>

			<!-- add generated sources directory -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>build-helper-maven-plugin</artifactId>
				<version>1.7</version>
				<executions>
					<execution>
						<id>add-sources</id>
						<goals><goal>add-source</goal></goals>
						<phase>generate-test-sources</phase>
						<configuration>
							<sources>
								<source>${flapi.generated.sources}</source>
							</sources>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<!-- compile normally, then again for generated sources -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.5.1</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
				<executions>
					<execution>
						<id>normal</id>
						<goals><goal>compile</goal></goals>
						<phase>compile</phase>
					</execution>
					<execution>
						<id>generated</id>
						<goals><goal>compile</goal></goals>
						<phase>process-test-sources</phase>
					</execution>
					<execution>
						<id>test</id>
						<goals><goal>testCompile</goal></goals>
						<phase>test-compile</phase>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>unquietcode.tools.flapi</groupId>
			<artifactId>flapi</artifactId>
			<version>${project.version}</version>
		</dependency>
	</dependencies>
</project>